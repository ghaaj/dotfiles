{
    "name": "dotfiles",
    "private": true,
    "scripts": {
        "prepare": "husky"
    },
    "devDependencies": {
        "husky": "^9.1.7",
        "lint-staged": "^15.4.3",
        "prettier": "^3.4.2",
        "prettier-plugin-sh": "^0.14.0",
        "prettier-plugin-toml": "^2.0.1"
    },
    "lint-staged": {
        "*": [
            "prettier --write --ignore-unknown"
        ],
        "*.lua": [
            "stylua"
        ],
        "{dot_zshrc, *.sh, *.zsh}": [
            "shellcheck"
        ]
    }
}
